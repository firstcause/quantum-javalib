<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:state_enabled="true"
		  android:state_pressed="false">

		<shape android:shape="rectangle"  >
			<corners android:radius="20dp" />
			<stroke android:width="2dp" android:color="#5e7974" />
			<gradient android:startColor="#ff007f00" android:centerColor="#ff00ff00" android:endColor="#ff007f00" />
		</shape>

	</item>

	<item android:state_enabled="true"
		  android:state_pressed="true">

		<shape android:shape="rectangle"  >
			<corners android:radius="20dp" />
			<stroke android:width="2dp" android:color="#5e7974" />
			<solid android:color="#FFFFFF"/>
		</shape>

	</item>

	<item android:state_enabled="false">

		<shape android:shape="rectangle"  >
			<corners android:radius="20dp" />
			<stroke android:width="2dp" android:color="#5e7974" />
			<gradient android:startColor="#000000" android:centerColor="#ff8b0000" android:endColor="#000000" />
		</shape>

	</item>

</selector>